<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnrollActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/petinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려동물 정보"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="50dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="146dp"
            android:layout_height="141dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/round_mint" />

        <EditText
            android:id="@+id/Name_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:minHeight="48dp"
            android:hint="이름"
            android:textSize="15sp"
            android:textColorHint="@color/hint"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textpet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반려동물"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:text="고양이"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radio_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="강아지"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:text="여성"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radio_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:text="남성"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radio_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="중성"
                android:textSize="15sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/Category_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:minHeight="48dp"
            android:hint="종"
            android:textSize="15sp"
            android:textColorHint="@color/hint"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Birth_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:minHeight="48dp"
            android:hint="생년월일  (8글자로 입력 ex : 20221111)"
            android:textSize="15sp"
            android:textColorHint="@color/hint"
            android:inputType="date" />

        <Button
            android:id="@+id/btn_enroll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:text="등록하기"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>