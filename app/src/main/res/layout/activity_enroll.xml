<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnrollActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="43dp">

        <TextView
            android:id="@+id/petinfo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:text="반려동물정보"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="146dp"
            android:layout_height="141dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/round_mint" />

        <EditText
            android:id="@+id/Name_Text"
            android:layout_width="395dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="이름" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textpet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="반려동물"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radio_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="고양이" />

            <RadioButton
                android:id="@+id/radio_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="강아지" />

            <RadioGroup
                android:id="@+id/radio_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="성별"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radio_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="여자" />

            <RadioButton
                android:id="@+id/radio_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="남자" />

            <RadioButton
                android:id="@+id/radio_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중성화"
                android:padding="10dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/Category_Text"
            android:layout_width="395dp"
            android:layout_height="65dp"
            android:ems="10"
            android:hint="종"
            android:inputType="text"
            android:text="종" />

        <EditText
            android:id="@+id/Birth_Text"
            android:layout_width="395dp"
            android:layout_height="65dp"
            android:ems="10"
            android:hint="생년월일"
            android:inputType="date"
            android:text="생년월일" />

        <Button
            android:id="@+id/btn_enroll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="등록하기"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>